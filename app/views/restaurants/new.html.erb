<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: 'Your restaurant name please', error: 'Name is mandatory, please specify one' %>
  <%= f.input :address, label: 'Your restaurant address please', error: 'Address is mandatory, please specify one' %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.button :submit %>
<% end %>
